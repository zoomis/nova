""" start add by NTT DOCOMO """

import sys
import getopt
import os

POSSIBLE_TOPDIR = os.path.normpath(os.path.join(os.path.abspath(sys.argv[0]),
                                   os.pardir,
                                   os.pardir))
if os.path.exists(os.path.join(POSSIBLE_TOPDIR, 'nova', '__init__.py')):
    sys.path.insert(0, POSSIBLE_TOPDIR)

from nova import context
from nova.virt.baremetal import bmdb
from nova import flags

FLAGS = flags.FLAGS

def main():
    usage = """
usage:
            --bm_node_id=<baremetal node ID>
            --mac_address=<MAC address in the form of xx:xx:xx:xx:xx:xx>
            --datapath_id=<datapath ID>
            --port_no=<port number>
            """
    opts, args = getopt.getopt(
        sys.argv[1:],
        "",
        [ 'flagfile=',
          'bm_node_id=',
          'mac_address=',
          'datapath_id=',
          'port_no=',
        ])

    flagfile = '/etc/nova/nova.conf'
    values = {
        'bm_node_id': None,
        'mac_address': None,
        'datapath_id': None,
        'port_no': None,
    }

    for o, a in opts:
        if o == '--flagfile':
            flagfile = a
            continue

        if o.startswith("--"):
            o = o[2:]
        if values.has_key(o):
            values[o] = a
        else:
            print "unrecognized option '%s'" % o
            print usage
            sys.exit(1)
    print 'values=%s' % values

    ok = True

    for k,v in values.items():
        if v is None:
            print "'%s' is not specified" % k
            ok = False

    if not ok:
        print usage
        sys.exit(1)
    
    values['datapath_id'] = values['datapath_id'].lower()
    if not values['datapath_id'].startswith("0x"):
        values['datapath_id'] = "0x" + values['datapath_id']

    args = sys.argv[:1] + args
    args = flags.parse_args(args, default_config_files=flagfile)
    ctx = context.get_admin_context()


    id = bmdb.bm_interface_create(
             ctx,
             bm_node_id=values['bm_node_id'],
             address=values['mac_address'],
             datapath_id=values['datapath_id'],
             port_no=values['port_no'])
    print id

if __name__ == "__main__":
    main()

""" end add by NTT DOCOMO """

